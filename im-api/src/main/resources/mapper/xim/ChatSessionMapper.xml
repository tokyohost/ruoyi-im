<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xim.api.mapper.ChatSessionMapper">
    
    <resultMap type="com.xim.api.domain.ChatSession" id="ChatSessionResult">
        <result property="id"    column="id"    />
        <result property="sessionid"    column="sessionId"    />
        <result property="createTime"    column="createTime"    />
        <result property="type"    column="type"    />
        <result property="firstMsgTime"    column="first_msg_time"    />
        <result property="lastMsgTime"    column="last_msg_time"    />
        <result property="uidHash"    column="uid_hash"    />
        <result property="sendUid"    column="send_uid"    />
        <result property="receiveUid"    column="receive_uid"    />
    </resultMap>

    <sql id="selectChatSessionVo">
        select id, sessionId, createTime, type, first_msg_time, last_msg_time, uid_hash, send_uid, receive_uid from chat_session
    </sql>

    <select id="selectChatSessionList" parameterType="com.xim.api.domain.ChatSession" resultMap="ChatSessionResult">
        <include refid="selectChatSessionVo"/>
        <where>  
            <if test="sessionid != null  and sessionid != ''"> and sessionId = #{sessionid}</if>
            <if test="sendUid != null  and sendUid != ''"> and send_uid = #{sendUid}</if>
            <if test="receiveUid != null  and receiveUid != ''"> and receive_uid = #{receiveUid}</if>
        </where>
    </select>
    
    <select id="selectChatSessionById" parameterType="Long" resultMap="ChatSessionResult">
        <include refid="selectChatSessionVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertChatSession" parameterType="com.xim.api.domain.ChatSession" useGeneratedKeys="true" keyProperty="id">
        insert into chat_session
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sessionid != null and sessionid != ''">sessionId,</if>
            <if test="createTime != null">createTime,</if>
            <if test="type != null">type,</if>
            <if test="firstMsgTime != null">first_msg_time,</if>
            <if test="lastMsgTime != null">last_msg_time,</if>
            <if test="uidHash != null and uidHash != ''">uid_hash,</if>
            <if test="sendUid != null">send_uid,</if>
            <if test="receiveUid != null">receive_uid,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sessionid != null and sessionid != ''">#{sessionid},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="type != null">#{type},</if>
            <if test="firstMsgTime != null">#{firstMsgTime},</if>
            <if test="lastMsgTime != null">#{lastMsgTime},</if>
            <if test="uidHash != null and uidHash != ''">#{uidHash},</if>
            <if test="sendUid != null">#{sendUid},</if>
            <if test="receiveUid != null">#{receiveUid},</if>
         </trim>
    </insert>

    <update id="updateChatSession" parameterType="com.xim.api.domain.ChatSession">
        update chat_session
        <trim prefix="SET" suffixOverrides=",">
            <if test="sessionid != null and sessionid != ''">sessionId = #{sessionid},</if>
            <if test="createTime != null">createTime = #{createTime},</if>
            <if test="type != null">type = #{type},</if>
            <if test="firstMsgTime != null">first_msg_time = #{firstMsgTime},</if>
            <if test="lastMsgTime != null">last_msg_time = #{lastMsgTime},</if>
            <if test="uidHash != null and uidHash != ''">uid_hash = #{uidHash},</if>
            <if test="sendUid != null">send_uid = #{sendUid},</if>
            <if test="receiveUid != null">receive_uid = #{receiveUid},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteChatSessionById" parameterType="Long">
        delete from chat_session where id = #{id}
    </delete>

    <delete id="deleteChatSessionByIds" parameterType="String">
        delete from chat_session where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>